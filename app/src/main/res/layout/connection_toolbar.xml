<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:id="@+id/ll_connection_toolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:layout_gravity="bottom"
    android:background="@drawable/connection_toolbar_layout"

    app:layout_scrollFlags="scroll|enterAlways"
    tools:targetApi="lollipop">

    <TextView
        android:id="@+id/tv_connection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:text="Device is offline, connect and try again"
        android:textColor="@color/warnPrimaryColor"
        android:textSize="14sp" />

</LinearLayout>
